{
  "name": "@marins-room/api",
  "version": "1.0.0",
  "private": true,
  "description": "Marin's Room API server with REST and WebSocket",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.550.0",
    "@aws-sdk/s3-request-presigner": "^3.550.0",
    "@marins-room/shared": "workspace:*",
    "@prisma/client": "^5.12.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "pino": "^8.19.0",
    "pino-pretty": "^11.0.0",
    "stripe": "^14.21.0",
    "uuid": "^9.0.1",
    "ws": "^8.16.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@marins-room/config": "workspace:*",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.0",
    "@types/uuid": "^9.0.8",
    "@types/ws": "^8.5.10",
    "prisma": "^5.12.0",
    "tsx": "^4.7.1",
    "typescript": "^5.4.0"
  }
}
